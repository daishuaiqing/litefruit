/* pages/user/goodsCard/goodsCard.wxss */
page {
    background: #F4F4F4;
}
.swiper-tab{
    width: 100%;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-around;
    background: #ffffff;
}
.swiper-tab-item{
    width: 120rpx; 
    font-size: 28rpx;
    color:#666666;
}
.active{
    color:#48B871;
    border-bottom: 2rpx solid #48B871;
    font-size: 28rpx;
}
.show{
    display: block;
}
.hidden{
    display: none;
}
.coupon {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.item {
    display: flex;
    width: 690rpx;
    height: 224rpx;
    background: #ffffff;
    margin-top: 20rpx;
    flex-direction: column;
}
.money {
    font-size: 28rpx;
    color: #FF3C4C;
}
.numb {
    font-size: 80rpx;
}
.item-body {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.b1 {
    display: flex;
    flex-direction: column;
    margin-left: 56rpx;
    margin-top: 28rpx;
}
.condition {
    font-size: 24rpx;
    color: #666666;
}
.b2 {
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
}
.cname {
    font-size: 30rpx;
    color: #333333;
}
.notice {
    font-size: 22rpx;
    color: #666666;
    margin-top: 12rpx;
}
.lable {
    font-size: 22rpx;
    color: #FF3C4C;
    margin-top: 18rpx;
    margin-right: 30rpx;
}
.validity {
    margin-top: 8rpx;
    font-size: 22rpx;
    color: #666666;
}
.gotobt {
    width: 100rpx;
    height: 42rpx;
    border: 1rpx solid rgba(255,60,76,1);
    border-radius: 26rpx;
    margin-right: 24rpx;
    font-size: 22rpx;
    color: #FF3C4C;
    line-height: 42rpx;
    text-align: center;
    margin-bottom: 24rpx;
}
.b3 {
    display: flex;
    height: 220rpx;
    align-items: flex-end;
}