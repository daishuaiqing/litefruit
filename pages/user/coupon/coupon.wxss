/* pages/user/coupon/coupon.wxss */
page {
    background: #F4F4F4;
}
.swiper-tab{
    width: 100%;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-around;
    background: #ffffff;
}
.swiper-tab-item{
    width: 120rpx; 
    font-size: 28rpx;
    color:#666666;
}
.active{
    color:#48B871;
    border-bottom: 2rpx solid #48B871;
    font-size: 28rpx;
}
.show{
    display: block;
}
.hidden{
    display: none;
}
.coupon {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.item {
    display: flex;
    width: 690rpx;
    height: 288rpx;
    background: #ffffff;
    margin-top: 20rpx;
    flex-direction: column;
}
.money {
    font-size: 28rpx;
    color: #FF3C4C;
}
.numb {
    font-size: 80rpx;
}
.item-body {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.b1 {
    display: flex;
    flex-direction: column;
    margin-left: 56rpx;
    margin-top: 40rpx;
}
.condition {
    font-size: 24rpx;
    color: #666666;
}
.b2 {
    display: flex;
    flex-direction: column;
    margin-top: 60rpx;
}
.cname {
    font-size: 30rpx;
    color: #333333;
}
.notice {
    font-size: 22rpx;
    color: #666666;
    margin-top: 12rpx;
}
.lable {
    font-size: 22rpx;
    color: #FF3C4C;
    margin-top: 18rpx;
    margin-right: 30rpx;
}
.line {
    width: 630rpx;
    height: 1rpx;
    border: 1rpx dotted#E2E2E2;
    margin-top: 32rpx;
}
.item-bottem {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.validity {
    margin-top: 22rpx;
    margin-left: 30rpx;
    font-size: 22rpx;
    color: #666666;
}
.touse {
    margin-right: 32rpx;
    margin-top: 20rpx;
    font-size: 22rpx;
    color: #FF3C4C;
}