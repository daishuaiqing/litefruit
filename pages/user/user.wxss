/* pages/user/user.wxss */
.user-box {
  background:#F5F5F7;
  width:100%;
  height:100%;
}
.header {
  width:100%;
  height:202rpx;
  background:#48B871;
  display:flex;
  flex-direction: row;
  align-items: center;
}
.headericon {
  width: 120rpx;
  height: 120rpx; 
  margin-left: 48rpx;
}
.headericon image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userinfo {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
}
.username {
  font-size: 36rpx;
  color: #fff;
}
.userphone {
  font-size: 28rpx;
  margin-top: 12rpx;
  color: #fff;
}
.userinfo-goto {
  display: flex;
  justify-content: flex-end;
  margin-left: 12rpx;
}
.userinfo-goto image {
  width: 14rpx;
  height: 28rpx;
  margin-left: 12rpx;
}
.all-order {
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
  padding: 0 25rpx;
  color: #333;
  border-bottom: 2rpx solid #ddd;
} 
.all-order image {
  width: 14rpx;
  height: 28rpx;
  margin-left: 12rpx;
}
.order-state {
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 36rpx;
}
.state {
  height: 174rpx;
  display: flex;
  flex-direction: column;
  align-items: center; 
  text-align: center;
}
.order-state image {
  margin-top: 18rpx;
  width: 44rpx;
  height: 44rpx;
}
.model {
  margin-top:20rpx;
  padding:0 36rpx;
  background:#fff;
}
.model-item {
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #ddd;
}
.model-item .try {
  display: flex;
  flex-direction: row;
  align-items: center;
}