/* pages/user/user.wxss */
page{
  background: #F4F4F4;
}
.header {
  background:#48B871;
  width:100%;
  height:202rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.headericon {
  width: 120rpx;
  height: 120rpx; 
  margin-left: 48rpx;
}
.headericon image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userinfo {
  margin-left: 32rpx;
  width: 520rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.userinfo-text {
  display: flex;
  flex-direction: column;
}
.userinfo-click {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.userinfo-goto {
  width: 14rpx;
  height: 24rpx;
}
.username {
  font-size: 36rpx;
  color: #fff;
}
.userphone {
  font-size: 28rpx;
  margin-top: 12rpx;
  color: #fff;
}
.coupon {
  width: 750rpx;
  height: 150rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}
.coupon-line {
  width: 2rpx;
  height: 60rpx;
  background:rgba(238,238,238,1);
}
.coupon-numb {
  color: #FE5756;
  font-size: 48rpx;
}
.coupon-text {
  color: #333333;
  font-size: 26rpx;
}
.coupon-show {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.coupon-text-mini {
  color: #FE5756;
  font-size: 24rpx;
}
.order {
  width: 750rpx;
  height: 268rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.myorder-text {
  font-size: 32rpx;
  color: #333333;
}
.orderlist {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.allorder-text {
  font-size: 24rpx;
  color: #999999;
  margin-right: 15rpx;
}
.order-header {
  height: 100rpx;
  margin-left: 36rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.order-item {
  height: 166rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item-state {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.state-dfk{
  width: 52rpx;
  height: 48rpx;
}
.state-dfh{
  width: 48rpx;
  height: 48rpx;
}
.state-dsh{
  width: 58rpx;
  height: 50rpx;
}
.state-ywc{
  width: 48rpx;
  height: 52rpx;
}
.state-text {
  font-size: 26rpx;
  margin-top: 22rpx;
}
.myservice {
  width: 750rpx;
  height: 458rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 20rpx;
}
.service-item {
  width: 750rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.service {
  display: flex;
  flex-direction: column;
  width: 110rpx;
}
.service-flm {
  width: 46rpx;
  height: 38rpx;
}
.service-wdsc {
  width: 46rpx;
  height: 40rpx;
}
.service-shdz {
  width: 40rpx;
  height: 44rpx;
}
.service-kf {
  width: 44rpx;
  height: 44rpx;
}
.service-text {
  font-size: 26rpx;
  margin-top: 20rpx;
}
.myservice-text {
  font-size: 32rpx;
  padding: 36rpx 36rpx;
}
.service {
  flex-direction: column;
  align-items: center;
}
