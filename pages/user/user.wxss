page{
  background: #F4F4F4;
}
.header {
  background:#48B871;
  width:100%;
  height:202rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.headericon {
  width: 120rpx;
  height: 120rpx; 
  margin-left: 48rpx;
}
.headericon image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.userinfo {
  margin-left: 32rpx;
  width: 520rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.userinfo-text {
  display: flex;
  flex-direction: column;
}
.userinfo-goto {
  width: 14rpx;
  height: 24rpx;
}
.username {
  font-size: 36rpx;
  color: #fff;
}
.userphone {
  font-size: 28rpx;
  margin-top: 12rpx;
  color: #fff;
}
